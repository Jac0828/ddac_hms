@model HMS.Web.Controllers.Room
@{
    ViewData["Title"] = "Room Details";
}

<div class="row">
    <div class="col-md-8">
        <h2>Room @Model.RoomNumber</h2>
        <hr />
        
        <dl class="row">
            <dt class="col-sm-3">Room Type:</dt>
            <dd class="col-sm-9">@Model.RoomType</dd>

            <dt class="col-sm-3">Price per Night:</dt>
            <dd class="col-sm-9">$@Model.PricePerNight</dd>

            <dt class="col-sm-3">Capacity:</dt>
            <dd class="col-sm-9">@Model.Capacity guests</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.Status == "Available" ? "success" : "warning")">@Model.Status</span>
            </dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Amenities:</dt>
            <dd class="col-sm-9">
                @if (Model.HasWifi) { <span class="badge bg-info me-1">WiFi</span> }
                @if (Model.HasTV) { <span class="badge bg-info me-1">TV</span> }
                @if (Model.HasAirConditioning) { <span class="badge bg-info me-1">Air Conditioning</span> }
                @if (Model.HasBalcony) { <span class="badge bg-info me-1">Balcony</span> }
            </dd>
        </dl>

        <div class="mt-4">
            @if (Model.Status == "Available" && User.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@Model.Id" class="btn btn-primary">Book This Room</a>
            }
            else if (User.Identity?.IsAuthenticated != true)
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login to Book</a>
            }
            <a asp-action="Index" class="btn btn-secondary">Back to Rooms</a>
        </div>
    </div>
</div>

